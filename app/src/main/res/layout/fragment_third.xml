<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainApplication.ThirdFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@color/ColorActive"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/dropdown_list_mounth"/>
        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_get_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập Năm"/>
        <ImageButton
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:id="@+id/bt_search"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:background="#C0A5F1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_tk_mounth"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:background="#7A46D8"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Thống kê:"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:background="@color/gradient_start_color"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng thu trong tháng:"/>
        <TextView
            android:id="@+id/tv_revenus_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="10000"
            android:padding="3dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:background="#D57193"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiêu trong tháng:"/>
        <TextView
            android:id="@+id/tv_show_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="10000"
            android:padding="3dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="25dp"
            android:padding="3dp"
            android:background="@color/text_color_vp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số dư:"/>
        <TextView
            android:id="@+id/tv_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="10000"
            android:padding="3dp"
            android:textSize="17dp"
            android:textColor="@color/bt_viewpager"
            android:textStyle="bold"/>
    </LinearLayout>
<!--    biểu đồ hình tròn nằm ở đây-->

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="2dp"
                android:background="#894695"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Thống kê chi tiêu"/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="250dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcl_tk_expenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="2dp"
                android:background="#293EB3"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Thống kê thu nhập"/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="250dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_tk_revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>