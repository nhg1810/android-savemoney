<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_coner_16"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Thiết Quy Định"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@drawable/bg_yellow_coner_16_top_left"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:textColor="#EA0000"
            android:id="@+id/alert_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="11dp" />
        <EditText
            android:inputType="number"
            android:id="@+id/edt_weekless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
        <EditText
            android:inputType="number"
            android:id="@+id/edt_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>

        <EditText
            android:inputType="number"
            android:id="@+id/edt_strong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"/>
        <com.google.android.flexbox.FlexboxLayout
            android:background="#714B12"
            app:justifyContent="space_evenly"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/teal_700"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_lv1"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Tiêu ít"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/background"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_lv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Vừa đủ"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/purple_200"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_lv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Báo động"
                    android:textColor="@color/white" />
            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="space_evenly"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_cancel_dialog"
            android:backgroundTint="#AE3636"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            android:text="Huỷ"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_setting_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            app:cornerRadius="10dp"
            android:text="Lưu thiết lập"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textM"/>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>